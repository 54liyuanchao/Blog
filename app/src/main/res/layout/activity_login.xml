<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.login.a54liyuanchao.blog.LoginActivity">

    <EditText
        android:id="@+id/LoginEmailField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="Email..."
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/LoginPasswordField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/LoginEmailField"
        android:layout_alignStart="@+id/LoginEmailField"
        android:layout_below="@+id/LoginEmailField"
        android:layout_marginTop="19dp"
        android:ems="10"
        android:hint="Password..."
        android:inputType="textPassword" />

    <Button
        android:id="@+id/LoginBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LoginPasswordField"
        android:layout_marginTop="15dp"
        android:text="Log In"
        android:layout_alignLeft="@+id/googleBtn"
        android:layout_alignStart="@+id/googleBtn"
        android:layout_alignRight="@+id/googleBtn"
        android:layout_alignEnd="@+id/googleBtn" />

    <com.google.android.gms.common.SignInButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LoginBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:id="@+id/googleBtn">
    </com.google.android.gms.common.SignInButton>

    <Button
        android:id="@+id/loginnewaccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Need a new account" />

    <ProgressBar
        android:id="@+id/progressBar3"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:visibility="invisible"
        android:layout_below="@+id/googleBtn"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
